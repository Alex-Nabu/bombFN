<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title><%= title %></title>
        <meta name="description" content="See what's in today's Fortnite Item Shop right now, all Fortnite skins, special offers &amp; bundles, shop history, your wishlisted cosmetics and more!">
        <meta name="theme-color" content="#2f3136">
        <link rel="apple-touch-icon" type="image/png" sizes="180x180" href="/logo/logo.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/logo/32x32.ico">
        <link rel="icon" type="image/png" sizes="16x16" href="/logo/16x16.ico">
        <link rel="manifest" href="site.webmanifest">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-title" content="Fortnite.GG">

        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/shop.css">
        <script type="text/javascript">
            var IsLogged=false; Url="/shop";
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js" type="text/javascript"></script>
        <script src="https://fortnite.gg/data/items/all-v2.en.js"></script>
        <script src="js/global.js" type="text/javascript"></script>
    </head>
    <body>
        <%- include ('./module/navbar.ejs') %>
        <div style="height: 100px;"></div>

        <div class="wrap" style="max-width:1280px">
            <div style="text-align:center">
                <h1>Fortnite Item Shop <div class="today-info">Friday, October 20, 2022</div>
                </h1>
                <div class="next-rotation">
                    <h3 class="next-rotation-title next-rotation-empty" onclick="if (!window.__cfRLUnblockHandlers) return false;">New items in <b class="shop-countdown" data-full="true">9:05:54</b> </h3>
                  </h3>
                  <div class="next-rotation-sections"></div>
                </div>
            </div>
            <% cards.forEach((ele, idx) => { %>
                <h2 style="margin:15px 0 10px"><%= ele[0].section.name %></h2>
                <div class="fn-items" style="grid-gap:16px 8px;margin-bottom:30px">
                    <% ele.forEach((cell, jdx) => { %>
                        <div class="fn-item">
                            <a href="/cosmetics?id=<%= cell.displayName %>" data-id="<%= cell.displayName %>" class="js-modal-item fn-item-wrap" style="border:none">
                                <% if(cell.displayAssets[0].background !== null){ %>
                                    <img class="img" src="<%= cell.displayAssets[0].background %>" alt="<%= cell.displayName %> for <%= cell.price.finalPrice %> V-Bucks" loading="lazy">
                                <% } else { %>
                                    <img class="img" src="<%= cell.displayAssets[0].background %>" alt="<%= cell.displayName %> for <%= cell.price.finalPrice %> V-Bucks" loading="lazy">
                                <% } %>
                                <div class="fn-item-bottom">
                                    <h3 class="fn-item-name"><%= cell.displayName %></h3>
                                    <div class="fn-item-price">
                                        <img src="img/vbucks.png" alt="V-Bucks"> <%= cell.price.finalPrice %>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }) %>
                </div>
            <% }) %>

        <div>
                
        <script src="js/shop.js"></script>
        <script src="js/item-details.js" type="text/javascript"></script>
        <script src="js/rocket-loader.min.js"></script>
    </body>
  </html>